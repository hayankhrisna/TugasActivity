<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFF"
    tools:context=".tugaslogin">

    <ImageView
        android:id="@+id/logo"

        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="200dp"

        android:layout_marginTop="100dp"
        android:src="@drawable/kamera" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <EditText

            android:id="@+id/user"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_below="@+id/logo"
            android:text="E-mail Address"
            android:background="@drawable/edit_text"

        />

        <EditText
            android:id="@+id/pass"
            android:layout_marginTop="20dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_below="@+id/user"
            android:text="Password "
            android:background="@drawable/edit_text"/>

        <Button
            android:id="@+id/btnlgn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pass"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:backgroundTint="#d67601"
            android:text="Login Me"
            android:hint="Login"
            android:textColorHint="#000000" />

        <TextView
            android:layout_below="@+id/btnlgn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/akun"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="Dont have an account? Create One"/>

    </LinearLayout>



</LinearLayout>