<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFF"

    tools:context=".tugasloginrelativelayout">

    <ImageView
        android:id="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:src="@drawable/kamera" />

    <EditText
        android:layout_width="322dp"
        android:layout_height="64dp"
        android:text="E-mail Address"
        android:id="@+id/username"
        tools:layout_editor_absoluteY="134dp"
        tools:layout_editor_absoluteX="38dp"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/logo"
        android:layout_alignLeft="@+id/pass"
        android:layout_alignStart="@+id/pass"
        android:background="@drawable/edit_text"/>
    <EditText
        android:layout_width="319dp"
        android:layout_height="56dp"
        android:text="Password"
        android:id="@+id/pass"
        tools:layout_editor_absoluteY="218dp"
        tools:layout_editor_absoluteX="38dp"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/username"
        android:layout_centerHorizontal="true"
        android:background="@drawable/edit_text"/>
     <Button
         android:text="Login Me"
         android:layout_width="136dp"
         android:layout_height="55dp"
         android:id="@+id/btnlgn"
         android:background="#d67601"
         tools:layout_editor_absoluteY="314dp"
         tools:layout_editor_absoluteX="124dp"
         android:layout_marginTop="42dp"
         android:layout_below="@+id/pass"
         android:layout_centerHorizontal="true"
         />
    <TextView
        android:layout_below="@id/btnlgn"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dont have an account? Create One!"/>
</RelativeLayout>

